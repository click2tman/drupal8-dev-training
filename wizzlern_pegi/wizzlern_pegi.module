<?php

/**
 * @file
 * Drupal hook implementations for Wizzlern Pegi module.
 */

/**
 * The node type used for Game review content.
 */
define('WIZZLERN_PEGI_GAME_CONTENT_TYPE', 'game');

/**
 * The taxonomy vocabulary used for Pegi categories.
 */
define('WIZZLERN_PEGI_TAXONOMY_VOCABULARY', 'pegi_rating');

/**
 * The field that is used to reference from the game to its Pegy category.
 */
define('WIZZLERN_GAME_PEGI_REFERENCE', 'field__ref_pegi');

/**
 * The Pegi taxonomy term field that contains the allowed age.
 */
define('WIZZLERN_PEGI_FIELD_ALLOWED_AGE', 'field_allowed_age');

/**
 * The profile field that contains the user's age.
 */
define('WIZZLERN_PEGI_FIELD_USER_AGE', 'field_user_age');

/**
 * The field that contains the pegi label image.
 */
define('WIZZLERN_PEGI_FIELD_PEGI_LABEL', 'field_pegi_label');

use Drupal\Core\Cache\Cache;
use Drupal\user\Entity\User;
use Drupal\Core\Access\AccessResult;

